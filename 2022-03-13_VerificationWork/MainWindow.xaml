        <Label x:Name="agltAmountLabel" Content="10" HorizontalAlignment="Left" Margin="378,199,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="intAmountLabel" Content="10" HorizontalAlignment="Left" Margin="378,286,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="285,430,0,0" HorizontalAlignment="Left" Width="214" Height="42" VerticalAlignment="Top"/>
