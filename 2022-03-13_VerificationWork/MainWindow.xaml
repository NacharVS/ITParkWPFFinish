        <Label x:Name="experienseAmountLabel" Content="0" HorizontalAlignment="Left" Margin="727,335,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="stmnLabel" Content="Stamina:" HorizontalAlignment="Left" Margin="346,324,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="stmnAmountLabel" Content="10" HorizontalAlignment="Left" Margin="378,366,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="stmnAddBtn" Content="+" HorizontalAlignment="Left" Margin="428,366,0,0" VerticalAlignment="Top" FontSize="20" Width="42" Height="42" Click="stmnAddBtn_Click"/>
        <Button x:Name="strRemoveBtn" Content="-" HorizontalAlignment="Left" Margin="304,101,0,0" VerticalAlignment="Top" FontSize="24" Width="42" Height="42" Click="strRemoveBtn_Click"/>
        <Button x:Name="agltRemoveBtn" Content="-" HorizontalAlignment="Left" Margin="305,197,0,0" VerticalAlignment="Top" FontSize="20" Width="42" Height="42" Click="agltRemoveBtn_Click"/>
        <Button x:Name="intRemoveBtn" Content="-" HorizontalAlignment="Left" Margin="305,286,0,0" VerticalAlignment="Top" FontSize="20" Width="42" Height="42" Click="intRemoveBtn_Click"/>
        <Button x:Name="stmnRemoveBtn" Content="-" HorizontalAlignment="Left" Margin="305,366,0,0" VerticalAlignment="Top" FontSize="20" Width="42" Height="42" Click="stmnRemoveBtn_Click"/>
        <GroupBox Header="Character List:" Margin="918,10,0,0" FontSize="24" HorizontalAlignment="Left" Width="283" Height="461" VerticalAlignment="Top"/>
        <ListBox x:Name="characterList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="954,55,0,0" FontSize="24" HorizontalAlignment="Left" Width="212" Height="290" VerticalAlignment="Top"/>

        <Button x:Name="updateBtn" Content="Update" HorizontalAlignment="Left" Height="48" Margin="954,363,0,0" VerticalAlignment="Top" Width="97" FontSize="24"/>
