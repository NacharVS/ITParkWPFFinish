        <Label x:Name="freePointAmountLabel" Content="10" HorizontalAlignment="Left" Margin="439,430,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="strAddBtn" Content="+" HorizontalAlignment="Left" Margin="428,101,0,0" VerticalAlignment="Top" FontSize="24" Width="42" Height="42" Click="strAddBtn_Click"/>
        <Button x:Name="agltAddBtn" Content="+" HorizontalAlignment="Left" Margin="428,197,0,0" VerticalAlignment="Top" FontSize="20" Width="42" Height="42" Click="agltAddBtn_Click"/>
        <Button x:Name="intAddBtn" Content="+" HorizontalAlignment="Left" Margin="428,286,0,0" VerticalAlignment="Top" FontSize="20" Width="42" Height="42" Click="intAddBtn_Click"/>

        <Label x:Name="physicalDamageLabel" Content="PhysicalDamage:" HorizontalAlignment="Left" Margin="585,54,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="physicalDefenseLabel" Content="PhysicalDefense:" HorizontalAlignment="Left" Margin="585,94,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="magicalDamageLabel" Content="MagicalDamage:" HorizontalAlignment="Left" Margin="585,128,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="physicalDamageAmountLabel" Content="0" HorizontalAlignment="Left" Margin="841,54,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="physicalDefenseAmountLabel" Content="0" HorizontalAlignment="Left" Margin="841,94,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="magicalDamageAmountLabel" Content="0" HorizontalAlignment="Left" Margin="841,128,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="magicalDefenseLabel" Content="MagicalDefense:" HorizontalAlignment="Left" Margin="585,162,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="healthLabel" Content="Health:" HorizontalAlignment="Left" Margin="585,200,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="manaLabel" Content="Mana:" HorizontalAlignment="Left" Margin="585,228,0,0" VerticalAlignment="Top" FontSize="24"/>
