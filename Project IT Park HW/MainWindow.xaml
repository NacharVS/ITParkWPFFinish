        <Label Content="Strength:" HorizontalAlignment="Left" Margin="256,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="Agility:" HorizontalAlignment="Left" Margin="256,48,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="Intellect:" HorizontalAlignment="Left" Margin="256,84,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="Endurance:" HorizontalAlignment="Left" Margin="255,121,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="Physical" HorizontalAlignment="Left" Margin="339,296,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblAgility_Copy3" Content="protection:" HorizontalAlignment="Left" Margin="338,310,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblEndurance_Copy1" Content="Magic" HorizontalAlignment="Left" Margin="339,375,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblPhysDamage" Content=" " HorizontalAlignment="Left" Margin="446,260,0,0" VerticalAlignment="Top" Height="34" FontWeight="Bold" FontSize="18" Width="53"/>
        <Label x:Name="lblPhysProtect" Content=" " HorizontalAlignment="Left" Margin="446,298,0,0" VerticalAlignment="Top" Height="34" FontWeight="Bold" FontSize="18" Width="53"/>
