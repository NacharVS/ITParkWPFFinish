        <Label x:Name="lblStrength" Content="10" HorizontalAlignment="Left" Margin="387,10,0,0" VerticalAlignment="Top" Height="29" Width="31" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="lblAgility" Content="10" HorizontalAlignment="Left" Margin="387,48,0,0" VerticalAlignment="Top" Height="35" Width="31" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="lblIntellect" Content="10" HorizontalAlignment="Left" Margin="387,84,0,0" VerticalAlignment="Top" Height="33" Width="42" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="lblEndurance" Content="10" HorizontalAlignment="Left" Margin="387,126,0,0" VerticalAlignment="Top" Height="34" Width="42" FontWeight="Bold" FontSize="16"/>
