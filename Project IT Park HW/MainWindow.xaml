        <Button x:Name="btnMInusAgility" Content="-" HorizontalAlignment="Left" Margin="353,52,0,0" VerticalAlignment="Top" Height="24" Width="29" FontWeight="Bold" FontSize="18" Click="btnMInusAgility_Click"/>
