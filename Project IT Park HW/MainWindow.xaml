        <Button x:Name="btnMInusIntellect" Content="-" HorizontalAlignment="Left" Margin="353,88,0,0" VerticalAlignment="Top" Height="25" Width="29" FontWeight="Bold" FontSize="18" Click="btnMInusIntellect_Click"/>
