        <Label x:Name="lblMagProtect" Content=" " HorizontalAlignment="Left" Margin="446,377,0,0" VerticalAlignment="Top" Height="34" FontWeight="Bold" FontSize="18" Width="53"/>
        <Label x:Name="lblHealth" Content=" " HorizontalAlignment="Left" Margin="446,414,0,0" VerticalAlignment="Top" Height="34" FontWeight="Bold" FontSize="18" Width="53"/>
        <Label x:Name="lblMana" Content=" " HorizontalAlignment="Left" Margin="446,453,0,0" VerticalAlignment="Top" Height="34" FontWeight="Bold" FontSize="18" Width="53"/>
        <Label x:Name="lblLevel" Content="1" HorizontalAlignment="Left" Margin="574,27,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
