        <GroupBox Header="Level:" HorizontalAlignment="Left" Height="76" Margin="556,8,0,0" VerticalAlignment="Top" Width="87" FontWeight="Bold"/>
        <GroupBox Header="Experience:" HorizontalAlignment="Left" Height="76" Margin="648,8,0,0" VerticalAlignment="Top" Width="192" FontWeight="Bold"/>
        <Label x:Name="lblphys" Content="Physical" HorizontalAlignment="Left" Margin="339,257,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblAgility_Copy4" Content="damage:" HorizontalAlignment="Left" Margin="338,271,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="43,138,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" Click="btnDelete_Click"/>
        <Button x:Name="btn1000exp" Content="+1000 experience" HorizontalAlignment="Left" Margin="648,89,0,0" VerticalAlignment="Top" Width="192" FontWeight="Bold" Click="btn1000exp_Click"/>
        <Button x:Name="btn3000exp" Content="+3000 experience" HorizontalAlignment="Left" Margin="648,114,0,0" VerticalAlignment="Top" Width="192" FontWeight="Bold" Click="btn3000exp_Click"/>
        <Button x:Name="btn5000exp" Content="+5000 experience" HorizontalAlignment="Left" Margin="648,139,0,0" VerticalAlignment="Top" Width="192" FontWeight="Bold" Click="btn5000exp_Click"/>
        <Button x:Name="btnEditing" Content="Disable unit editing?" HorizontalAlignment="Left" Margin="43,188,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" Click="btnEditing_Click"/>
        <Button x:Name="btnChange" Content="Change" HorizontalAlignment="Left" Margin="43,163,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" Click="btnChange_Click"/>
        <RadioButton x:Name="rbAllowed" Content="Editing allowed!" HorizontalAlignment="Left" Margin="255,173,0,0" VerticalAlignment="Top" FontWeight="Bold" IsChecked="True"/>
        <RadioButton x:Name="rbForbidden" Content="Editing forbidden!" HorizontalAlignment="Left" Margin="255,193,0,0" VerticalAlignment="Top" FontWeight="Bold"/>


    </Grid>
</Window>
