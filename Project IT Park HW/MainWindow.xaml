<Window x:Class="Project_IT_Park_HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_IT_Park_HW"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="850">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="43,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontWeight="Bold" Height="18" SelectionChanged="txtName_SelectionChanged" GotFocus="txtName_GotFocus"/>
        <ComboBox x:Name="cmbClass" HorizontalAlignment="Left" Margin="43,86,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" SelectionChanged="cmbClass_SelectionChanged">
            <ListBoxItem Content="Archer" FontWeight="Bold" FontSize="14"/>
            <ListBoxItem Content="Mage" FontWeight="Bold" FontSize="14"/>
            <ListBoxItem Content="Warrior" FontWeight="Bold" FontSize="14"/>
        </ComboBox>
        <Label Content="Unit class selection:" HorizontalAlignment="Left" Margin="43,55,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="43,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <GroupBox Header="Characteristics:" Margin="339,210,341,10" FontWeight="Bold" FontSize="13" Content=""/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="43,113,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" Click="btnCreate_Click"/>
        <ListBox x:Name="lbxUnitList" Margin="43,233,607,10" Loaded="lbxUnitList_Loaded" SelectionChanged="lbxUnitList_SelectionChanged"/>
        <Label Content="Unit List:" HorizontalAlignment="Left" Margin="43,206,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13"/>
        <Label Content="Unit class:" HorizontalAlignment="Left" Margin="248,206,0,0" VerticalAlignment="Top" FontSize="13" FontWeight="Bold"/>
        <ListBox x:Name="lbxUnitClass" Margin="248,233,516,10"/>
        <Label x:Name="lblStrength_Copy" Content="damage:" HorizontalAlignment="Left" Margin="339,349,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblAgility_Copy" Content="protection:" HorizontalAlignment="Left" Margin="339,388,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblEndurance_Copy" Content="Magic" HorizontalAlignment="Left" Margin="339,336,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblAgility_Copy1" Content="Health:" HorizontalAlignment="Left" Margin="339,420,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
